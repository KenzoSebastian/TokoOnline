<div class="bg-primary-5/70 w-full z-50 absolute top-0" id="navbar">
    <div class="container">
        <nav class="flex items-center justify-between sm:px-2 px-3 md:px-4 relative">
            <div class="w-[100px] md:w-[155px]">
                <a href="#"><img src="../img/dashboard/logoDashboard.png" alt="logo" class="w-full"></a>
            </div>
            <div class="flex items-center gap-3 justify-between sm:w-4/5 md:w-3/5">
                <a href="#" class="w-6 sm:w-7 md:w-8 relative hover:scale-105 transition sm:order-1">
                    <img src="../img/dashboard/bag.png" alt="bag" class="w-full">
                    <p class="absolute -top-2 -right-1 w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6 bg-primary-13 text-primary-8 font-black text-[10px] sm:text-xs md:text-[13px] flex items-center justify-center rounded-full sm:-right-2 sm:-top-2.5 md:-right-2.5 md:-top-3">5</p>
                </a>

                <a href="#" class="w-7 sm:w-8 md:w-9 sm:ml-3 md:ml-5 hover:scale-105 transition overflow-hidden rounded-full sm:order-last">
                    <img src="../img/ProfilePicture/blankProfile.png" alt="profile" class="w-full">
                </a>

                <div class="w-5 h-5 flex flex-col items-center justify-around cursor-pointer hover:scale-105 transition sm:hidden" id="hambuger">
                    <span class="list-hambuger-menu"></span>
                    <span class="list-hambuger-menu"></span>
                    <span class="list-hambuger-menu"></span> 
                </div>

                <ul class="absolute top-14 right-0 bg-primary-8 text-secondary text-[11px] md:text-sm hidden sm:listNavbar" id="listNavbar">
                    <li><a href="#productsContainer" class="items-navbar sm:hover:-translate-y-1">Products</a></li>
                    <li><a href="#" class="items-navbar sm:hover:-translate-y-1">Categories</a></li>
                    <li><a href="#" class="items-navbar sm:hover:-translate-y-1">About</a></li>
                    <li><a href="#" class="items-navbar sm:hover:-translate-y-1">Become a seller</a></li>
                </ul>
            </div>
        </nav>
    </div>
</div>

<script>
    // hamburger menu
    const hambuger = document.getElementById("hambuger");
    hambuger.addEventListener("click", () => {
        const listHambuger = hambuger.children;
        const listNavbar = document.getElementById("listNavbar");
        if (hambuger.classList.contains("active")) {
            listHambuger[0].classList.remove("list-active1");
            listHambuger[1].classList.remove("list-active2");
            listHambuger[2].classList.remove("list-active3");
            hambuger.classList.remove("active");

            listNavbar.classList.replace("listNavbar", "hidden");
        } else {
            listHambuger[0].classList.add("list-active1");
            listHambuger[1].classList.add("list-active2");
            listHambuger[2].classList.add("list-active3");
            hambuger.classList.add("active");

            listNavbar.classList.replace("hidden", "listNavbar");
        }
    });

    // fixed navbar
    const navbar = document.getElementById("navbar");
    const fixednavbar = navbar.offsetTop;
    window.addEventListener("scroll", () => {
        if (window.pageYOffset > fixednavbar) {
            navbar.classList.remove("absolute");
            navbar.classList.add("navbar-fixed");
        } else {
            navbar.classList.add("absolute");
            navbar.classList.remove("navbar-fixed");
        }
    });
</script>