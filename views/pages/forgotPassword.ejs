<!-- generate error class -->
<%- include('../layouts/errorClass.ejs') %>

<div class="min-h-screen px-12 py-5 flex items-center">
    <div class="forgot-box">
        <a href="/auth/login?role=<%= role %>" class="peer">
            <img src="../../img/back.png" alt="" class="w-3 hover:scale-110 duration-300 transition absolute left-3 top-3 sm:w-4 md:w-5 sm:left-4 md:left-5 sm:top-4 md:top-5">
        </a>
        <p class="text-[7px] text-white bg-black px-1 py-0.5 absolute left-2 top-9 sm:text-[8px] md:text-[9px] sm:left-3 sm:top-11 md:left-4 md:top-[52px] scale-0 transition-all ease-in-out duration-300 peer-hover:scale-100">back</p>

        <div>
            <h1 class="uppercase text-center my-3 text-sm font-bold sm:text-base md:text-xl">Change Password</h1>
            <p class="capitalize text-[11px] font-light text-center max-w-56 block mx-auto mb-4 text-pretty sm:text-xs md:text-base">Enter your email and we will process your request to reset your password</p>
        </div>

        <form action="/auth/forgot?role=<%= role %>" method="post" class="w-full flex items-center gap-x-2 sm:gap-x-3 md:gap-x-4 h-16 relative">

            <% if (error.length > 0) { %>
                <input type="email" name="email" class="input-form-forgot-error" placeholder="Email">

                <!-- error message -->
                <p class="text-red-500 text-[10px] md:text-xs absolute bottom-1.5 left-0.5 md:bottom-0.5"><%= error %></p>
            <% } else { %>
                <input type="email" name="email" class="input-form-forgot" placeholder="Email">
            <% } %>
        
            <button type="submit" class="btn-primary translate-y-1">Submit</button>
        </form>
    </div>
</div>