        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2 sm:gap-3 md:gap-4" id="products">
            <!-- card start -->
            <!-- card end -->
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    // api calling
    const products = document.getElementById("products");

    const card = (image, title, description, price, link) => {
        const element = `
        <a href="/products/${link}" class="card-product">
            <img src="${image}" alt="product" class="w-full max-h-[150px] md:max-h-[200px] lg:max-h-[250px] object-cover">
            <div class="px-2 flex flex-col justify-start h-full pb-2">
                <h1 class="font-black uppercase text-xs md:text-base">${title}</h1>
                <p class="text-[10px] md:text-sm">${description}</p>
                <div class="mt-2 flex items-end h-full">
                    <div class="flex justify-between items-center w-full">
                        <p class="font-bold text-[11px] md:text-[15px]">Rp. ${price}</p>
                        <div class="flex justify-end gap-2">
                            <form action="#" id="love">
                                <input type="hidden" value="id_product">
                                <button type="submit" class="btn-card"><img src="../img/dashboard/emptyLove.png" alt="love"></button>
                            </form>
                            <form action="#" id="bag">
                                <input type="hidden" value="id_product">
                                <button type="submit" class="btn-card"><img src="../img/dashboard/addBag.png" alt="addBag"></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        `;
        return element;
    };

    const callApi = async () => {
        try {
            const { data } = await axios.get('https://dummyjson.com/products');
            console.log(data);
            
            data.products.forEach(product => {
                const price = (product.price * 1000).toLocaleString('id-ID', { style: 'currency', currency: 'IDR' });
                if (product.description.length > 130) {
                    product.description = `${product.description.substring(0, 130)} <span class="text-[10px] md:text-sm font-bold">...read more</span>`;
                };
                products.innerHTML += card(product.images[0], product.title, product.description, price, product.id);
            });
        } catch (error) {
            console.log(error);
        }
        
    };
    callApi();
</script>